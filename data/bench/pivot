pivot : Ord a => {x : a, xs : List a} -> (List a, List a)
pivot 2 [] = ([], [])
pivot 2 [2] = ([], [2])
pivot 2 [1] = ([1], [])
pivot 2 [3] = ([], [3])
pivot 2 [1, 3] = ([1], [3])
pivot 2 [3, 2] = ([], [3,2])
pivot 2 [0, 1] = ([0, 1], [])
pivot 2 [5, 1] = ([1], [5])
pivot 2 [1, 1, 3] = ([1, 1], [3])
pivot 2 [1, 0, 1] = ([1, 0, 1], [])
pivot 2 [2, 5, 1] = ([1], [2,5])
pivot 2 [1, 3, 2] = ([1], [3,2])